<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.history.HistoryOptionsFragment">

        <Button
            android:id="@+id/btn_quickmatch_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            style="@style/SquashMeOutlinedButton"
            android:text="@string/quick_match_history"
            android:textColor="@color/main_color"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_tournament_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            style="@style/SquashMeOutlinedButton"
            android:text="@string/tournament_history"
            android:textColor="@color/main_color"
            tools:ignore="ButtonStyle" />

</FrameLayout>
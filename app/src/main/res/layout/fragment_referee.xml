<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RefereeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/player_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/transparent_squared"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/transparent_squared"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ste_counter_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/transparent_squared"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/transparent_squared"
                android:gravity="center"
                android:textColor="@color/black" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <Button
                android:id="@+id/end_game_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_squared"
                android:text="@string/end_game"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/revert_point_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_squared"
                android:text="@string/revert_point"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/players_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/player_one_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/player_one_sides"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="50dp">

                    <Button
                        android:id="@+id/player_one_left_side_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/transparent_squared"
                        android:text="@string/left_side"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/player_one_right_side_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/transparent_squared"
                        android:text="@string/right_side"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <Button
                    android:id="@+id/player_one_add_point_btn"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/transparent_rounded"
                    android:textColor="@color/black"
                    android:textSize="150sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player_two_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/player_two_sides"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="50dp">

                    <Button
                        android:id="@+id/player_two_left_side_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/transparent_squared"
                        android:text="@string/left_side"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/player_two_right_side_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/transparent_squared"
                        android:text="@string/right_side"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <Button
                    android:id="@+id/player_two_add_point_btn"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/transparent_rounded"
                    android:textColor="@color/black"
                    android:textSize="150sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
